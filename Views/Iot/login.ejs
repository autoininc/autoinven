<!DOCTYPE html>
<html lang="ko">
    <head>
        <meta charset="UTF-8">
        <title>AUTOINVEN : 로그인</title>
        <link rel="stylesheet" href="/public/stylesheets/join_login.css">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="public/javascripts/login.js"></script>

    </head>
    <body>
        <!-- header -->
        <div id="header">
            <a href="/">
                <img src="public/images/main_logo.png" id="logo">
            </a>
        </div>


        <!-- wrapper -->
        <div id="wrapper">

            <!-- content-->
            <div id="content">

                <form method="post">
                    <!-- ID -->
                    <div>
                        <h3 class="join_title">
                            <label for="id">아이디</label>
                        </h3>
                        <span class="box int_id">
                            <input type="text" id="id" name="id" class="int" maxlength="20">
                        </span>
                        <span class="error_next_box"></span>
                    </div>
    
                    <!-- PW1 -->
                    <div>
                        <h3 class="join_title"><label for="pswd1">비밀번호</label></h3>
                        <span class="box int_pass">
                            <input type="password" id="pswd1" name="password" class="int" maxlength="20">
                        </span>
                        <span class="error_next_box"></span>
                    </div>
    
                    <!-- JOIN BTN-->
                    <div class="btn_area">
                        <button type="button" id="btnJoin">
                            <span>로그인</span>
                        </button>
                    </div>
                </form>

            </div> 
            <!-- content-->

        </div> 
        <!-- wrapper -->
    </body>
</html>